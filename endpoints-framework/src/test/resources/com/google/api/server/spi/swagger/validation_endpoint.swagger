  "basePath": "/_ah/api",
  "tags": [
    {
      "name": "validation:v1"
    }
  ],
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/validation/v1/{pathParam}": {
      "post": {
        "tags": [
          "validation:v1"
        ],
        "operationId": "validation:v1.create",
        "parameters": [
          {
            "name": "pathParam",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^\\d+$"
          },
          {
            "name": "queryParam",
            "in": "query",
            "required": true,
            "type": "string",
            "pattern": "^[a-z]{2}$"
          }, 
          {
            "name" : "minMaxParam",
            "in" : "query",
            "required" : true,
            "type" : "integer",
            "format" : "int64",
            "minimum": 10,
            "maximum": 20
          },
          {
            "name" : "decimalMinMaxParam",
            "in" : "query",
            "required" : true,
            "type" : "number",
            "format" : "double",
            "minimum": 2.3,
            "exclusiveMinimum" : true,
            "maximum": 4,
            "exclusiveMaximum" : false
          },
          {
            "name" : "sizeParam",
            "in" : "query",
            "required" : true,
            "type" : "string",
            "minLength": 3,
            "maxLength" : 6
          },
          {
            "name" : "arraySizeParam",
            "in" : "query",
            "required" : false,
            "type" : "array",
            "items" : {
              "type" : "string"
            },
            "collectionFormat" : "multi",
            "maxItems" : 3,
            "minItems" : 2
          }
        ],
        "responses": {
          "204": {
            "description" : "A successful response"
          }
        }
      }
    }
  }
}
